{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/index.ts", "src/components/**/*", "src/hooks/**/*.vue"],
  "exclude": ["src/**/*.test.*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
